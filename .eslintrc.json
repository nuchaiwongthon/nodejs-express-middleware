{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "off",
        "import/newline-after-import": "error",
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "windows"],
        "allowForLoopAfterthoughts": true
    }
}